<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55ffffff"
    android:orientation="vertical"
    android:weightSum="1"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/SilverArrowWidget"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:layout_column="1"
        android:layout_row="0"
        android:paddingTop="15dp"
        app:srcCompat="@drawable/downarrow"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/SilverGramWidgetText"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:ignore="HardcodedText"
        tools:text="-" />

    <TextView
        android:id="@+id/USDEURWidgetText"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:ignore="HardcodedText"
        tools:text="-" />

    <ImageView
        android:id="@+id/USDEURWidget"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:layout_column="2"
        android:layout_row="0"
        android:paddingTop="15dp"
        app:srcCompat="@drawable/currency"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/GoldGramWidgetText"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:ignore="HardcodedText"
        tools:text="-" />

    <ImageButton
        android:id="@+id/refresh"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_column="3"
        android:layout_row="1"
        android:background="@android:color/transparent"
        android:onClick="updateMyWidgets"
        app:srcCompat="@drawable/refresh"
        tools:ignore="ContentDescription" />

    <ProgressBar
        android:id="@+id/refreshing"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_column="3"
        android:layout_row="1" />

    <TextView
        android:id="@+id/goldLabel"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Gold"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        tools:text="Gold" />

    <TextView
        android:id="@+id/silverLabel"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="Silver"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        tools:text="Silver" />

    <ImageView
        android:id="@+id/GoldArrowWidget"
        android:layout_width="97dp"
        android:layout_height="54dp"
        android:layout_column="0"
        android:layout_row="0"
        android:paddingTop="15dp"
        app:srcCompat="@drawable/uparrow"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/USDLabel"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:text="US Dollar"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        tools:text="US Dollar" />

</GridLayout>