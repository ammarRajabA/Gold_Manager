<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dotech.ammar_rajab.goldmanager.SilverFragment"
    tools:ignore="GradleDependency">

<!-- TODO: Update blank fragment layout -->

<ImageView
    android:id="@+id/stat"
    android:layout_width="348dp"
    android:layout_height="290dp"
    android:layout_marginBottom="38dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:contentDescription="statistics"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0"
    app:srcCompat="@android:drawable/ic_dialog_alert"
    tools:ignore="HardcodedText" />

<TextView
    android:id="@+id/gramLabel"
    android:layout_width="85dp"
    android:layout_height="33dp"
    android:lineSpacingExtra="24sp"
    android:text="Gram"
    android:textAlignment="center"
    android:textSize="24sp"
    tools:ignore="HardcodedText,RtlHardcoded"
    android:layout_marginTop="24dp"
    app:layout_constraintTop_toBottomOf="@+id/ounceLabel"
    android:layout_marginLeft="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintHorizontal_bias="0.0" />

<TextView
    android:id="@+id/gramSilver"
    android:layout_width="213dp"
    android:layout_height="33dp"
    android:lineSpacingExtra="14sp"
    android:text="-"
    android:textAlignment="center"
    android:textSize="24sp"
    android:textStyle="bold"
    tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
    tools:text="-"
    android:layout_marginTop="24dp"
    app:layout_constraintTop_toBottomOf="@+id/ounceSilver"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.664" />

<TextView
    android:id="@+id/ounceLabel"
    android:layout_width="83dp"
    android:layout_height="33dp"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:lineSpacingExtra="30sp"
    android:text="Ounce"
    android:textAlignment="center"
    android:textSize="24sp"
    app:layout_constraintLeft_toLeftOf="parent"
    tools:ignore="HardcodedText,RtlHardcoded"
    tools:text="Ounce"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="16dp" />

<TextView
    android:id="@+id/ounceSilver"
    android:layout_width="213dp"
    android:layout_height="33dp"
    android:lineSpacingExtra="14sp"
    android:text="-"
    android:textAlignment="center"
    android:textSize="24sp"
    android:textStyle="bold"
    tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
    tools:text="-"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.664" />

<ImageView
    android:id="@+id/change"
    android:layout_width="33dp"
    android:layout_height="32dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="16dp"
    android:contentDescription="arrow currency change"
    android:visibility="invisible"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintRight_toRightOf="parent"
    app:srcCompat="@drawable/uparrow"
    tools:ignore="HardcodedText,RtlHardcoded"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="16dp" />

<ProgressBar
    android:id="@+id/loading"
    style="?android:attr/progressBarStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/changeLabel"
        android:layout_width="38dp"
        android:layout_height="16dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:text="-"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/change"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/stat"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintVertical_bias="0.262"
        tools:ignore="HardcodedText,SmallSp" />
</android.support.constraint.ConstraintLayout>
