<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dotech.ammar_rajab.goldmanager.CurrencyFragment"
    tools:ignore="GradleDependency">

<!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/USDin"
        android:layout_width="85dp"
        android:layout_height="33dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:lineSpacingExtra="24sp"
        android:text="USD"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/USDCurr"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:text="USD"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/EURLabel" />

    <TextView
        android:id="@+id/EURin"
        android:layout_width="85dp"
        android:layout_height="33dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:lineSpacingExtra="24sp"
        android:text="EUR"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/USDCurr"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:text="EUR"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/USDin" />

    <TextView
        android:id="@+id/USDLabel"
        android:layout_width="85dp"
        android:layout_height="33dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="24sp"
        android:text="1 USD ="
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/USDCurr"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:text="1 USD =" />

<TextView
    android:id="@+id/USDCurr"
    android:layout_width="213dp"
    android:layout_height="33dp"
    android:lineSpacingExtra="14sp"
    android:text="-"
    android:textAlignment="center"
    android:textSize="24sp"
    android:textStyle="bold"
    tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
    tools:text="-"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.664"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/EURCurr"
    app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/EURLabel"
        android:layout_width="83dp"
        android:layout_height="33dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="78dp"
        android:lineSpacingExtra="30sp"
        android:text="1 EUR ="
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/EURCurr"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded"
        tools:text="1 EUR =" />

<TextView
    android:id="@+id/EURCurr"
    android:layout_width="213dp"
    android:layout_height="33dp"
    android:lineSpacingExtra="14sp"
    android:text="-"
    android:textAlignment="center"
    android:textSize="24sp"
    android:textStyle="bold"
    tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
    tools:text="-"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="78dp"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintHorizontal_bias="0.664" />

<ProgressBar
    android:id="@+id/loading"
    style="?android:attr/progressBarStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.8" />

    <EditText
        android:id="@+id/EURinNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="58dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text="0"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/EURin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/USDinNum"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/USDinNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="58dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:text="0"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/USDin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EURCurr"
        tools:ignore="HardcodedText,RtlHardcoded" />

</android.support.constraint.ConstraintLayout>
